set number
set showmatch
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smarttab
" activating syntax
syntax on
set mouse=a
set wildmode=longest,list
" setting the colorscheme
set termguicolors
let ayucolor="dark"
colorscheme ayu
" setting the background to be invisible
hi Normal guibg=NONE ctermbg=NONE
set colorcolumn=80
